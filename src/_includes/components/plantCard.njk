{% macro plantCard(name, notes, type, link, image) %}
<div class="col py-3 card" data-type="type1">
	<div class="card mb-4 rounded-3 shadow-sm h-100 text-center">

{% if image %}
			<img src="{{image}}" class="card-img-top" alt={{name}} />
			{% else %}
			<img src="/images/missing_plant.png" class="card-img-top" alt="Missing plant" />
				
{% endif %}

			<div class="card-body px-3 pt-5 pb-3">
				<h4 class="card-title">{{name}}</h4>
				<span class="badge badge-pill badge-primary">{{type}}</span>
				<p>{{notes}}</p>
				{% if link %}
					
		<a href="{{link}}" target="_blank" rel="noopener noreferrer"
			style="text-decoration: none;">
			Voir fiche
		</a>
				{% endif %}
			</div>
	</div>
</div>
{% endmacro %}